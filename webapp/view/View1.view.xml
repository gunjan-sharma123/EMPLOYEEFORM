<mvc:View controllerName="com.emp.employeeform.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
<t:Table rows="{/empTab}" selectionMode="Single" rowSelectionChange="onRowSelect">
    <t:columns>
        <t:Column>
            <t:label>
                <Label text="{i18n>XLBL_EMPID}" />
            </t:label>
            <t:template>
            <Text text="{empId}"/>
            </t:template>
        </t:Column>
         <t:Column>
            <t:label>
                <Label text="{i18n>XLBL_EMPNAME}" />
            </t:label>
             <t:template>
            <Text text="{empName}"/>
            </t:template>
        </t:Column>
         <t:Column>
            <t:label>
                <Label text="{i18n>XLBL_SAL}" />
            </t:label>
             <t:template>
            <Text text="{salary}"/>
            </t:template>
        </t:Column>
         <t:Column>
            <t:label>
                <Label text="{i18n>XLBL_CURR}" />
            </t:label>
             <t:template>
             <Text text="{currency}"/>
            </t:template>
        </t:Column>
        <t:Column>
            <t:label>
                <Label text="Smoker" />
            </t:label>
             <t:template>
            <CheckBox selected="{smoker}"></CheckBox>
            </t:template>
        </t:Column>
         <t:Column>
            <t:label>
                <Label text="Gender" />
            </t:label>
             <t:template>
            <Text text="{gender}"/>
            </t:template>
        </t:Column>
         <t:Column>
            <t:label>
                <Label text="M Status" />
            </t:label>
             <t:template>
            <Select selectedKey ="{mState}">
            <items>
            <core:Item text ="Married" key="M"/>
            <core:Item text ="Single" key="S"/>

            </items>
            </Select>
            </t:template>
        </t:Column>
        
         <t:Column>
            <t:label>
                <Label text="Rating" />
            </t:label>
             <t:template>
            <RatingIndicator value="{rating}"></RatingIndicator>
            </t:template>
        </t:Column> 
        

    </t:columns>
</t:Table>

   <VBox class="sapUiSmallMargin">
	    <f:SimpleForm  editable="true" title="Employee Dashboard" id="idSimple">
        		<f:content>
                	<Label text="{i18n>XLBL_EMPID}" />
				    <Input id="idEmpId" value="{empId}" />
                    <Label text="{i18n>XLBL_EMPNAME}" />
				    <Input id="idEmpName" value="{empName}" />
                    <Label text="{i18n>XLBL_SAL}" />
				    <Input id="idEmpSal" value="{salary}" />
                    <Label text="{i18n>XLBL_CURR}" />
				    <Input id="idEmpCurr" value="{currency}" />
                    <Label/>
                    <Button text="{i18n>XBUT_RELOAD}" press="onReload"></Button>
                    <Button text="{i18n>XBUT_SHOW}" press="onShowme"></Button>
                    <Button text="{i18n>XBUT_FLIP}" press="onFlip"></Button>

                </f:content>
    	</f:SimpleForm>
	</VBox>
    </Page>
</mvc:View>